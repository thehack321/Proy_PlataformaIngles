@model Proy_EnglishPlatform.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<head>
    <link href="~/css/login.css" rel="stylesheet">
    <style>
        body {
            padding-top: 60px;
        }
    </style>
    <script type="text/javascript" src="~/js/bootstrap.js"></script>
    <script type="text/javascript" src="~/js/login/jquery.easing.1.3.js"></script>
    <script type="text/javascript" src="~/js/login/jquery.validate.js"></script>
    <script type="text/javascript" src="~/js/login/jquery.watermark.min.js"></script>
    <script type="text/javascript" src="~/js/login/login.js"></script>
</head>

<body>
    <div class=" container">
        <div class="row">
            <div class="span3"></div>
            <div class="span6 middle">
                <div id="register-wraper">
                    <form id="register-form" class="form">
                        <h2>Registro de Usuario</h2>
                        <div class="body">
                            <label for="name">Nombres</label>
                            <input name="name" class="input-huge" type="text">
                            <label for="surname" >Apellidos</label>
                            <input name="surname" class="input-huge" type="text">
                            <label>Usuario</label>
                            <input class="input-huge" type="text">
                            <label>E-mail</label>
                            <input class="input-huge" type="text">
                            <label>Contraseña</label>
                            <input class="input-huge" type="password">
                        </div>

                        <div class="footer">
                            <label class="checkbox inline">
                                <input type="checkbox" id="inlineCheckbox1" value="option1"> Acepto las condiciones y servicios
                            </label>
                            <button type="submit" class="btn btn-success">Registrarce</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="span3"></div>
        </div>
    </div>
</body>