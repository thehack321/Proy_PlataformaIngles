    ViewBag.Title = "Contact";
}

<body>
    <div class="container">
        <div class="row middle">
            <h2>Where in the world is English Platform?</h2>
            <br>
            <div class="span4 contactblock">
                <img src="~/img/contact/new-york.jpg" alt="">
                <p><i class="icon-map-marker"></i> <b>SANTA ANITA</b></p>
                <p>
                    5th Avenue, 789<br>
                    Manhattan,<br>
                    zip 10032,<br>
                    <b>+987 398437</b>
                </p>
            </div>
            <div class="span4 contactblock">
                <img src="~/img/contact/los-angeles.jpg" alt="">
                <p><i class="icon-map-marker"></i> <b>SAN BORJA</b></p>
                <p>
                    Wonderland, 989<br>
                    Long Beach,<br>
                    zip 12900,<br>
                    <b>+987 398437</b>
                </p>
            </div>
            <div class="span4 contactblock">
                <img src="~/img/contact/san-francisco.jpg" alt="">
                <p><i class="icon-map-marker"></i> <b>CHORRILLOS</b></p>
                <p>
                    Santa Clara, 989<br>
                    Cupertino,<br>
                    zip 10900,<br>
                    <b>+987 398437</b>
                </p>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row middle">
            <h1>Drop us a line.</h1>
            <div class="span3"></div>
            <div class="span6">
                <div class="contact-area">
                    <div class="address container">
                        <div class="row">
                            <div class="span6">
                                <form action="#get-in-touch" method="POST" id="contact">
                                    <input type="search" style="width:200px;" id="contactname" name="contactname" placeholder="Name">
                                    <input type="search" style="width:190px;" id="email" name="email" placeholder="Email">
                                    <div class="textarea-container"><textarea id="message" name="message" placeholder="Message"></textarea></div>
                                    <input style="width:425px;" type="submit" id="submit" name="submit" value="Send">
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>